# SizeWise Suite Frontend Environment Configuration
# This file contains frontend-specific environment variables
# Copy this file to .env.local and update the values according to your environment

# =============================================================================
# NEXT.JS CONFIGURATION
# =============================================================================

# Environment (development, staging, production)
NODE_ENV=development

# Server Configuration
PORT=3000
HOSTNAME=0.0.0.0

# =============================================================================
# API ENDPOINTS (PUBLIC VARIABLES)
# =============================================================================

# Backend API URL (accessible from browser)
NEXT_PUBLIC_API_URL=http://localhost:5000/api

# Authentication API URL (accessible from browser)
NEXT_PUBLIC_AUTH_URL=http://localhost:5001/api

# WebSocket URL (if using real-time features)
NEXT_PUBLIC_WS_URL=ws://localhost:5000/ws

# =============================================================================
# APPLICATION SETTINGS (PUBLIC VARIABLES)
# =============================================================================

# Application Environment
NEXT_PUBLIC_APP_ENV=development

# Debug Settings
NEXT_PUBLIC_ENABLE_DEBUG=true
NEXT_PUBLIC_ENABLE_CONSOLE_LOGS=true

# Feature Flags
NEXT_PUBLIC_ENABLE_3D_VIEWER=true
NEXT_PUBLIC_ENABLE_REAL_TIME_CALC=true
NEXT_PUBLIC_ENABLE_COLLABORATION=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# =============================================================================
# CDN AND ASSETS (PUBLIC VARIABLES)
# =============================================================================

# CDN Configuration
NEXT_PUBLIC_CDN_URL=
NEXT_PUBLIC_ASSETS_URL=

# Image Optimization
NEXT_PUBLIC_IMAGE_DOMAINS=localhost,127.0.0.1,cdn.sizewise.app

# =============================================================================
# EXTERNAL SERVICES (PUBLIC VARIABLES)
# =============================================================================

# Sentry Configuration
NEXT_PUBLIC_SENTRY_DSN=
NEXT_PUBLIC_SENTRY_ENVIRONMENT=development
NEXT_PUBLIC_SENTRY_RELEASE=sizewise-frontend@1.0.0

# Analytics (if enabled)
NEXT_PUBLIC_GA_TRACKING_ID=
NEXT_PUBLIC_HOTJAR_ID=

# =============================================================================
# UI/UX CONFIGURATION (PUBLIC VARIABLES)
# =============================================================================

# Theme Settings
NEXT_PUBLIC_DEFAULT_THEME=light
NEXT_PUBLIC_ENABLE_DARK_MODE=true

# Localization
NEXT_PUBLIC_DEFAULT_LOCALE=en
NEXT_PUBLIC_SUPPORTED_LOCALES=en,es,fr

# =============================================================================
# HVAC SPECIFIC SETTINGS (PUBLIC VARIABLES)
# =============================================================================

# Default Units
NEXT_PUBLIC_DEFAULT_UNITS=imperial
NEXT_PUBLIC_SUPPORTED_UNITS=imperial,metric

# Standards
NEXT_PUBLIC_DEFAULT_STANDARD=SMACNA
NEXT_PUBLIC_SUPPORTED_STANDARDS=SMACNA,ASHRAE,NFPA

# =============================================================================
# PERFORMANCE SETTINGS (PUBLIC VARIABLES)
# =============================================================================

# Caching
NEXT_PUBLIC_CACHE_ENABLED=true
NEXT_PUBLIC_CACHE_TTL=300

# Pagination
NEXT_PUBLIC_DEFAULT_PAGE_SIZE=20
NEXT_PUBLIC_MAX_PAGE_SIZE=100

# =============================================================================
# SECURITY SETTINGS (PUBLIC VARIABLES)
# =============================================================================

# CSRF Protection
NEXT_PUBLIC_CSRF_ENABLED=true

# Content Security Policy
NEXT_PUBLIC_CSP_ENABLED=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development Tools
NEXT_PUBLIC_ENABLE_DEVTOOLS=true
NEXT_PUBLIC_ENABLE_REACT_QUERY_DEVTOOLS=true

# Hot Reloading
FAST_REFRESH=true

# =============================================================================
# BUILD CONFIGURATION
# =============================================================================

# Build Settings
NEXT_TELEMETRY_DISABLED=1
ANALYZE=false

# Bundle Analysis
BUNDLE_ANALYZE=false

# =============================================================================
# SERVER-SIDE CONFIGURATION (PRIVATE VARIABLES)
# =============================================================================

# Internal API URLs (server-side only)
INTERNAL_API_URL=http://backend:5000/api
INTERNAL_AUTH_URL=http://auth-server:5001/api

# Session Configuration
SESSION_SECRET=your-session-secret-change-in-production
SESSION_COOKIE_NAME=sizewise-session
SESSION_MAX_AGE=86400

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================

# Docker-specific settings
DOCKER_ENV=false
CONTAINER_NAME=sizewise-frontend

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================

# Test Environment
NEXT_PUBLIC_TEST_MODE=false
NEXT_PUBLIC_MOCK_API=false

# E2E Testing
NEXT_PUBLIC_E2E_BASE_URL=http://localhost:3000
