{
  "name": "sizewise-suite",
  "version": "0.1.0",
  "description": "A modular, offline-capable HVAC engineering and estimating platform with glassmorphism UI",
  "main": "app/templates/frontend/js/main.js",
  "scripts": {
    "dev": "vite --config app/config/vite.config.js",
    "build": "vite build --config app/config/vite.config.js",
    "preview": "vite preview --config app/config/vite.config.js",
    "test": "jest --config app/config/jest.config.js",
    "test:watch": "jest --config app/config/jest.config.js --watch",
    "test:coverage": "jest --config app/config/jest.config.js --coverage",
    "test:integration": "jest --config app/config/jest.config.js app/tests/integration --testTimeout=30000",
    "test:unit": "jest --config app/config/jest.config.js app/tests/unit",
    "test:all": "./app/tools/scripts/test.sh",
    "test:backend": "python -m pytest app/tests/unit/backend/ -v",
    "lint": "eslint app/templates/frontend/ --ext .js,.ts",
    "lint:fix": "eslint app/templates/frontend/ --ext .js,.ts --fix",
    "format": "prettier --write app/templates/frontend/",
    "start:backend": "python app/services/run_backend.py",
    "start:dev": "concurrently \"npm run start:backend\" \"npm run dev\"",
    "build:pwa": "vite build && workbox generateSW workbox-config.js",
    "dev:nextjs": "cd app/templates/nextjs && npm run dev",
    "build:nextjs": "cd app/templates/nextjs && npm run build",
    "start:nextjs": "cd app/templates/nextjs && npm start",
    "install:nextjs": "cd app/templates/nextjs && npm install"
  },
  "keywords": [
    "hvac",
    "engineering",
    "duct-sizing",
    "estimating",
    "offline-first",
    "pwa",
    "glassmorphism",
    "nextjs",
    "typescript"
  ],
  "author": "SizeWise Suite Team",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@types/jest": "^29.5.5",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "babel-jest": "^29.7.0",
    "concurrently": "^8.2.1",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "fake-indexeddb": "^4.0.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2",
    "vite": "^7.0.4",
    "vite-plugin-pwa": "^1.0.1",
    "workbox-cli": "^7.0.0"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "dexie": "^3.2.4",
    "idb": "^7.1.1",
    "zod": "^3.22.4"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
