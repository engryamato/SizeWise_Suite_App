{
  "name": "SizeWise Suite - HVAC Engineering Platform",
  "short_name": "SizeWise Suite",
  "description": "Professional HVAC engineering platform for air duct sizing, grease duct calculations, boiler vent sizing, and compliance checking with offline-first capabilities.",
  "version": "1.0.0",
  "start_url": "/",
  "display": "standalone",
  "orientation": "any",
  "theme_color": "#1f2937",
  "background_color": "#ffffff",
  "scope": "/",
  "lang": "en-US",
  "dir": "ltr",
  "categories": [
    "productivity",
    "business",
    "utilities",
    "education"
  ],
