  "shortcuts": [
    {
      "name": "Air Duct Sizer",
      "short_name": "Air Duct",
      "description": "Quick access to air duct sizing calculations",
      "url": "/air-duct-sizer",
      "icons": [
        {
          "src": "/icons/shortcut-air-duct.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "New Project",
      "short_name": "New Project",
      "description": "Create a new HVAC project",
      "url": "/projects/new",
      "icons": [
        {
          "src": "/icons/shortcut-new-project.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Dashboard",
      "short_name": "Dashboard",
      "description": "View project dashboard and recent activity",
      "url": "/dashboard",
      "icons": [
        {
          "src": "/icons/shortcut-dashboard.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Compliance Check",
      "short_name": "Compliance",
      "description": "Check HVAC design compliance with standards",
      "url": "/tools?tool=compliance",
      "icons": [
        {
          "src": "/icons/shortcut-compliance.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "related_applications": [
    {
      "platform": "windows",
      "url": "https://github.com/engryamato/SizeWise_Suite_App/releases",
      "id": "com.sizewise.suite.desktop"
    }
  ],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "handle_links": "preferred",
  "protocol_handlers": [
    {
      "protocol": "web+sizewise",
      "url": "/import?data=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "application/json": [".json"],
        "text/csv": [".csv"],
        "application/vnd.ms-excel": [".xls"],
        "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet": [".xlsx"]
      }
    }
  ],
  "share_target": {
    "action": "/import",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "file",
          "accept": [
            "application/json",
            "text/csv",
            "application/vnd.ms-excel",
            "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet"
          ]
        }
      ]
    }
  },
  "capture_links": "existing-client-navigate",
  "display_override": [
    "window-controls-overlay",
    "standalone",
    "minimal-ui",
    "browser"
  ],
  "id": "sizewise-suite-hvac-platform"
}
