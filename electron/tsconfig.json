{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["ES2020", "DOM"],
    "strict": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "*": ["*", "types/*"]
    },
    "outDir": "../dist/electron"
  },
  "include": ["**/*.ts", "types/**/*.d.ts"],
  "exclude": [
    "../backend/**",
    "../frontend/**",
    "../tests/**",
    "**/__tests__/**",
    "**/*.test.ts",
    "node_modules"
  ]
}
